{
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "react-app", 
    "prettier",
    "prettier/react",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "jsx-a11y/href-no-hash": [0],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": 0,
    "react/jsx-uses-vars": [2],
    "no-console": 0,
    "import/prefer-default-export": 0,
    "camelcase": 0,
    "no-underscore-dangle": "warn"
  }
}