{
  "name": "marvinjs",
  "version": "1.1.1",
  "private": true,
  "description": "A campus / community slack bot designed for 42 and relative campuses.",
  "repository": {
    "type": "git",
    "url": "git@github.com:ItsWendell/marvin-js.git"
  },
  "main": "build/server.js",
  "scripts": {
    "dev": "nodemon src/",
    "build": "npm run build:next",
    "build:next": "next build src/dashboard",
    "heroku-postbuild": "npm run build",
    "start": "NODE_ENV=production node src/index.js -p $PORT",
    "lint": "eslint src/",
    "lint:commit": "commitlint . --from=e37b88b806e806a0a599e843247666fc3959707c",
    "lint:fix": "eslint --fix src/",
    "release": "npx -n='-r dotenv/config' semantic-release",
    "release:local": "node -r dotenv/config node_modules/semantic-release/bin/semantic-release --no-ci"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "@sentry/node": "^4.6.4",
    "@slack/client": "^4.10.0",
    "@zeit/next-less": "^1.0.1",
    "antd": "^3.13.6",
    "axios": "^0.18.0",
    "babel-preset-airbnb": "^3.2.0",
    "connect-mongo": "^2.0.3",
    "dotenv": "^6.2.0",
    "express": "^4.14.0",
    "express-session": "^1.15.6",
    "grommet": "^2.5.5",
    "less": "^3.9.0",
    "moment": "^2.24.0",
    "mongodb": "^3.1.13",
    "mongoose": "^5.4.16",
    "next": "^7.0.3",
    "next-auth": "^1.12.1",
    "node-schedule": "^1.3.2",
    "parse-link-header": "^1.0.1",
    "passport": "^0.4.0",
    "passport-42": "^1.2.4",
    "polished": "^3.0.0",
    "qs": "^6.6.0",
    "raven": "^2.6.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "simple-oauth2": "^2.2.1",
    "styled-components": "^4.1.3",
    "styled-jsx": "^3.2.1",
    "vm2": "^3.6.10",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@peakfijn/config-commitlint": "^1.0.0-rc.3",
    "@peakfijn/config-release": "^1.0.0-rc.3",
    "babel-eslint": "^9.0.0",
    "babel-plugin-styled-components": "^1.8.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.7",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3"
  },
  "babel": {
    "presets": [
      "airbnb",
      "@babel/preset-env",
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ],
      [
        "styled-jsx/babel",
        {
          "optimizeForSpeed": true
        }
      ]
    ],
    "ignore": [
      "src/dashboard/.next"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "src/dashboard/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@peakfijn/config-commitizen"
    }
  },
  "commitlint": {
    "extends": [
      "@peakfijn/config-commitlint"
    ]
  },
  "release": {
    "extends": "@peakfijn/config-release"
  }
}
